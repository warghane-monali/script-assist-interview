{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"lib": [
			"DOM",
			"DOM.Iterable",
			"ESNext"
		],
		"allowJs": false,
		"skipLibCheck": true,
		"esModuleInterop": false,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "commonjs",
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react-jsx"
	},
	"include": [
		"src"
	],
	  /* Alias Path */
	  "baseUrl": ".",
	  "paths": {
		"@/*": ["src/*"],
		"@routes/*":["src/routes/*"],
		"@assets/*":["src/assets/*"],
		"@components/*": ["src/components/*"],
		"@Features/*": ["src/Features/*"],
		"@pages/*": ["src/pages/*"],
		"@store/*": ["src/store/*"],
		"@types/*":["src/types/*"]
	  },
}
